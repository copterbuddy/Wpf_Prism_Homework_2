<Window x:Class="WPFScbOri.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFScbOri.Views"
        xmlns:components="clr-namespace:WPFScbOri.Components"
        mc:Ignorable="d"
         ResizeMode="CanMinimize"
        WindowState="Maximized"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <!--Main Window-->
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Images/landing page_bg 1.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="9*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="9*"></RowDefinition>
            </Grid.RowDefinitions>

            <!--Header Layout-->
            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
                <Grid.Background>
                    <ImageBrush ImageSource="/Images/landing page_bar 2.png" Stretch="UniformToFill"/>
                </Grid.Background>

                <!--Left Info-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" HorizontalAlignment="Center" Source="/Images/logo.png" Margin="10,0,0,0" />
                </Grid>

                <!--Right Info-->
                <Grid Grid.Column="1" HorizontalAlignment="Right">
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <Grid Margin="0,0,5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="1" Cursor="Hand" Source="/Images/landing page_begin 1.png" Margin="0,0,5,0" />
                            <Image Grid.Column="2" HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_tool 1.png" Margin="5,0,0,0" />
                        </Grid>
                        <Grid Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="fullname" Text="" Style="{StaticResource LandingTextUserInfo}" />
                            <TextBlock Grid.Row="1" x:Name="idBrn" Text="" Style="{StaticResource LandingTextUserInfo}" />
                        </Grid>
                        <Grid Grid.Column="2" Margin="15,0,20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="1" HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_.png"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <!--Menu Layout-->
            <Grid Grid.Row="1" Grid.Column="0" Margin="24,10,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_ch 1.png" />
                </Grid>
                <Grid Grid.Row="1">
                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_ch 2.png" />
                </Grid>
                <Grid Grid.Row="2">
                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_ch 3.png" />
                </Grid>
                <Grid Grid.Row="3">
                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_ch 4.png" />
                </Grid>
                <Grid Grid.Row="4">
                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_ch 5.png" />
                </Grid>
                <Grid Grid.Row="5">
                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_ch 6.png" MouseDown="Image_MouseDown" />
                </Grid>
                <Grid Grid.Row="6">
                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="/Images/landing page_ch 7.png" />
                </Grid>
            </Grid>

            <!--Content Layout-->
            <Grid Grid.Row="1" Grid.Column="1" Margin="0,20,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="9.5*"></RowDefinition>
                    <RowDefinition Height="0.5*"></RowDefinition>
                </Grid.RowDefinitions>

                <!--Content-->
                <!--Welcome Menu-->
                <Grid x:Name="WelcomeMenu" Grid.Row="0" Visibility="Visible">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/landing page_bg 2.png" Stretch="UniformToFill"></ImageBrush>
                        
                    </Grid.Background>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Center" Source="/Images/landing page_center.png" />
                </Grid>

                <!--Other Services Menu-->
                <!--<ScrollViewer>-->

                <ScrollViewer x:Name="OtherServicesMenu"  VerticalScrollBarVisibility="Auto" Grid.Row="0"  Margin="0,0,25,15" CanContentScroll="True" Visibility="Hidden">
                    <StackPanel Background="#ffffff">

                    <Grid Background="#F4B45A">
                            <TextBlock Text="ขายกองทุน / Sell Fund" Style="{StaticResource MainOtherSeviceTextBlock}" Foreground="#513281" Margin="10,0"></TextBlock>
                    </Grid>

                    <!--ข้อมูลลูกค้า-->
                    <Grid>
                        <Border Grid.Row="0" BorderBrush="#513281"
                                Background="#ffffff"
                                BorderThickness="2"
                                CornerRadius="12"
                                Width="130"
                                Height="40"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Panel.ZIndex="2"
                                Margin="10,20,0,0">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource SelectFundTextTitleBold}" Foreground="Black" Text="ข้อมูลลูกค้า" Margin="6,0,0,0"></TextBlock>
                        </Border>
                        <Border Grid.Row="0" BorderBrush="#513281"
                                BorderThickness="2"
                                CornerRadius="12"
                                Panel.ZIndex="1"
                                Margin="20,40,20,0">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <!--Line1-->
                                <!--เลขทะเบียนลูกค้า-->
                                <Grid Grid.Row="0" Margin="0,30,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                                Margin="20,0,10,0"
                                            Text="เลขทะเบียนลูกค้า : "
                                            Style="{StaticResource SelectFundTextTitleBold}" 
                                            Foreground="Black"
                                            VerticalAlignment="Center"
                                        />
                                    <TextBox x:Name="CustomerIdTextBox"
                                                Grid.Column="1"
                                                Style="{StaticResource TextBoxSearCustomerEntryStyle}"
                                            Width="350"
                                            Height="40"
                                            BorderThickness="3"
                                                VerticalAlignment="Center"
                                                IsReadOnly="True"
                                            />

                                    <Image Grid.Column="1"
                                            Source="/Images/SCB3-02.png" 
                                            Margin="0,0,0,0" 
                                            Width="35" 
                                            Height="36" 
                                            Cursor="Hand"
                                            HorizontalAlignment="Right"
                                            MouseDown="OpenSearchCustomerDialog_MouseDown"
                                            />
                                    <!--</StackPanel>-->

                                    <!--บัญชีกองทุนที่-->
                                    <TextBlock Grid.Column="2"
                                                Text="บัญชีกองทุนที่ : "
                                                Margin="20,0,10,0"
                                                Style="{StaticResource SelectFundTextTitleBold}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                    <TextBox x:Name="FundAccountIdTextBox"
                                                Grid.Column="3"
                                                Style="{StaticResource TextBoxSearCustomerEntryStyle}"
                                            Width="400"
                                            Height="40"
                                                BorderThickness="3"
                                                IsReadOnly="True"
                                                />
                                </Grid>
                                <!--EndLine1-->


                                <!--Line2-->
                                <Grid Grid.Row="1" Margin="0,5,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="2.5*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="3*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                                Margin="20,7,0,0"
                                            Text="ชื่อ - นามสกุล : "
                                            Style="{StaticResource SelectFundTextTitleBold}" 
                                            Foreground="Black"
                                        />

                                    <Label x:Name="CustomerName" Grid.Column="1"
                                                Margin="0,0,10,0"
                                            Content=""
                                            Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                            Foreground="Black"

                                            />

                                    <TextBlock Grid.Column="2"
                                                Margin="20,0,0,0"
                                            Text="บัญชีร่วม : "
                                            Style="{StaticResource SelectFundTextTitleBold}" 
                                            Foreground="Black"
                                            VerticalAlignment="Center"
                                                />

                                    <Label x:Name="JointAccount" Grid.Column="3"
                                                Content=""
                                                Margin="0,0,10,0"
                                                Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                    <TextBlock Grid.Column="4"
                                                Text="ลูกค้าเปราะบาง : "
                                                Margin="0,0,0,0"
                                                Style="{StaticResource SelectFundTextTitleBold}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                    <Label x:Name="SensitiveCustomer" Grid.Column="5"
                                                Content=""
                                                Margin="0,0,0,0"
                                                Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                    <TextBlock Grid.Column="6"
                                                Text="ระดับความเสี่ยง : "
                                                Margin="0,0,0,0"
                                                Style="{StaticResource SelectFundTextTitleBold}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                    <Label x:Name="RiskLevel" Grid.Column="7"
                                                Content=""
                                                Margin="0,0,0,0"
                                                Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />
                                </Grid>
                                <!--EndLine2-->
                            </Grid>


                        </Border>
                        <Button Grid.Row="0"
                                Panel.ZIndex="3"
                                Content="เงื่อนไขการลงนาม"
                                Style="{StaticResource DefaultPurpleButtonStyle}"
                                Width="190"
                                Height="45"
                                HorizontalAlignment="Right"
                                Margin="0,0,40,20"
                                Cursor="Hand"
                                />

                    </Grid>

                    <!--ผู้แนะนำการลงทุน-->
                    <Grid>
                        <Border Grid.Row="0" BorderBrush="#513281"
                                Background="#ffffff"
                                BorderThickness="2"
                                CornerRadius="12"
                                Width="170"
                                Height="40"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Panel.ZIndex="2"
                                Margin="10,20,0,0">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource SelectFundTextTitleBold}" Foreground="Black" Text="ผู้แนะนำการลงทุน" Margin="6,0,0,0"></TextBlock>
                        </Border>
                        <Border Grid.Row="0" BorderBrush="#513281"
                                BorderThickness="2"
                                CornerRadius="12"
                                Panel.ZIndex="1"
                                Margin="20,35,20,0">

                            <Grid Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <!--Line1-->
                                <!--เลขประจำตัวพนักงาน-->
                                <Grid Grid.Row="0" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0">

                                        <TextBlock
                                                Margin="20,0,10,0"
                                            Text="เลขประจำตัวพนักงาน : "
                                            Style="{StaticResource SelectFundTextTitleBold}" 
                                            Foreground="Black"
                                            VerticalAlignment="Center"
                                        />

                                        <TextBox x:Name="StaffId"
                                                Style="{StaticResource TextBoxSearCustomerEntryStyle}"
                                            Width="150"
                                            Height="40"
                                            BorderThickness="3"
                                                VerticalAlignment="Center"
                                                IsReadOnly="True"
                                            />

                                        <Image
                                            Source="/Images/SCB3-02.png" 
                                            Margin="-35,0,0,0" 
                                            Width="30" 
                                            Height="30" 
                                            Cursor="Hand"
                                            HorizontalAlignment="Right"
                                            MouseDown="OpenSearchEmployeeDialog_MouseDown"
                                            />

                                    </StackPanel>

                                    <!--บัญชีกองทุนที่-->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal">

                                        <TextBlock 
                                                Text="เลขประจำตัว กลต. : "
                                                Margin="20,0,10,0"
                                                Style="{StaticResource SelectFundTextTitleBold}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                        <Label x:Name="SecId"
                                                Content=""
                                                Margin="20,0,10,0"
                                                Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal">
                                        <TextBlock 
                                                Text="IC license : "
                                                Margin="20,0,10,0"
                                                Style="{StaticResource SelectFundTextTitleBold}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                        <Label x:Name="IcLicense"
                                                Content=""
                                                Margin="20,0,10,0"
                                                Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />
                                    </StackPanel>
                                </Grid>
                                <!--EndLine1-->


                                <!--Line2-->
                                <Grid Grid.Row="1" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="0">

                                        <TextBlock
                                                Margin="20,0,10,0"
                                            Text="เลขที่บัตรพนักงาน RM : "
                                            Style="{StaticResource SelectFundTextTitleBold}" 
                                            Foreground="Black"
                                            VerticalAlignment="Center"
                                        />

                                        <Label x:Name="StaffRm"
                                                Margin="20,0,10,0"
                                            Content=""
                                            Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                            Foreground="Black"
                                            VerticalAlignment="Center"
                                        />

                                    </StackPanel>

                                    <!--บัญชีกองทุนที่-->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal">

                                        <TextBlock 
                                                Text="ชื่อ - นามสกุล : "
                                                Margin="20,0,10,0"
                                                Style="{StaticResource SelectFundTextTitleBold}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                        <Label x:Name="StaffName"
                                                Content=""
                                                Margin="20,0,10,0"
                                                Style="{StaticResource MainSellFundLabelRegularBlack}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal">
                                        <TextBlock 
                                                Text="คำสั่งนี้เกิดจาก : "
                                                Margin="20,0,10,0"
                                                Style="{StaticResource SelectFundTextTitleBold}" 
                                                Foreground="Black"
                                                VerticalAlignment="Center"
                                            />

                                        <ComboBox Grid.Column="1" x:Name="ComboBoxOrderBy"
                            VerticalAlignment="Center" Margin="0,0,0,0" Height="35" 
                                                Background="#98d7f8" 
                                                IsReadOnly="true" ItemsSource="{Binding SearchEmployeeResult}"
                                                IsEditable="False"
                                                Text="Select Account"
                                                Cursor="Hand"
                                                Width="230"
                                                    FontSize="20" Template="{StaticResource UsernameBox}"
                                                >
                                            <ComboBox.Resources>
                                                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#98d7f8" />
                                            </ComboBox.Resources>
                                            <ComboBox.ItemContainerStyle>
                                                <Style TargetType="ComboBoxItem">
                                                    <Setter Property="Background" Value="#98d7f8"/>
                                                    <Setter Property="BorderBrush" Value="#98d7f8"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </Style>
                                            </ComboBox.ItemContainerStyle>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Text}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>

                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                                <!--EndLine2-->
                            </Grid>

                        </Border>

                    </Grid>

                    <!--รายการขาย-->
                    <Grid Margin="0,0,0,0">
                        <Border Grid.Row="0" BorderBrush="#513281"
                                Background="#ffffff"
                                BorderThickness="2"
                                CornerRadius="12"
                                Width="130"
                                Height="40"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Panel.ZIndex="2"
                                Margin="10,20,0,0">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource SelectFundTextTitleBold}" Foreground="Black" Text="รายการขาย" Margin="6,0,0,0"></TextBlock>
                        </Border>
                        <Border Grid.Row="0" BorderBrush="#513281"
                                BorderThickness="2"
                                CornerRadius="12"
                                Panel.ZIndex="1"
                                Margin="0,40,0,0"
                                Padding="0,0,0,0">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0"
                                        Panel.ZIndex="3"
                                        Content="เลือกกองทุน"
                                        Style="{StaticResource DefaultPurpleButtonStyle}"
                                        Width="190"
                                        Height="45"
                                        HorizontalAlignment="Right"
                                        Margin="0,15,40,0"
                                        Cursor="Hand"
                                        Click="OpenSelectedFundDialog_Click"
                                />

                                <!--DataTemplate-->
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                                    <Grid Margin="20,50,20,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0" Background="#503181" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150" />
                                                    <ColumnDefinition Width="300"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="140" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="รหัสกองทุน" Style="{DynamicResource TextBlockHeaderStyle2}" />
                                                <TextBlock Grid.Column="1" Text="ชื่อกองทุน" Style="{DynamicResource TextBlockHeaderStyle2}" />
                                                <TextBlock Grid.Column="2" Text="จำนวนหน่วย" Style="{DynamicResource TextBlockHeaderStyle2}" />
                                                <TextBlock Grid.Column="3" Text="จำนวนบาท" Style="{DynamicResource TextBlockHeaderStyle2}" />
                                                <TextBlock Grid.Column="4" Text="จำนวนหน่วยผิดเงื่อนไข" Style="{DynamicResource TextBlockHeaderStyle2}" />
                                                <TextBlock Grid.Column="5" Text="สถานะรายการ" Style="{DynamicResource TextBlockHeaderStyle2}" />
                                                <TextBlock Grid.Column="6" Text="" />
                                            </Grid>
                                        </Grid>

                                        <ItemsControl x:Name="SellFundListGrid" Grid.Row="1">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.Resources>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="FontSize" Value="15" />
                                                                <Setter Property="FontWeight" Value="Regular" />
                                                                <Setter Property="FontFamily" Value="{DynamicResource SarabunRegular}" />
                                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                            </Style>
                                                        </Grid.Resources>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <Grid Grid.Row="0" Background="Transparent">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="150" />
                                                                <ColumnDefinition Width="300"/>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="200" />
                                                                <ColumnDefinition Width="200"/>
                                                                <ColumnDefinition Width="140" />
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock 
                                                                        Grid.Column="0"
                                                                        Text="{Binding Id}"
                                                                        Foreground="Black"
                                                                        Margin="40,0,0,0"
                                                                        HorizontalAlignment="Left"/>
                                                            <TextBlock 
                                                                        Grid.Column="1" 
                                                                        Text="{Binding Name}"
                                                                        Foreground="Black"
                                                                        HorizontalAlignment="Left"/>
                                                            <TextBlock 
                                                                        Grid.Column="2"
                                                                        Text="{Binding Volume, StringFormat='#,##0.0000;(#,##0.0000)'}"
                                                                        Foreground="Black" />
                                                            <TextBlock 
                                                                        Grid.Column="3"
                                                                        Text="{Binding Price, StringFormat='#,##0.0000;(#,##0.0000)'}"
                                                                        Foreground="Black" />
                                                            <TextBlock 
                                                                        Grid.Column="4"
                                                                        Text="{Binding ErrorVolume, StringFormat='#,##0.0000;(#,##0.0000)'}"
                                                                        Foreground="Black" />
                                                            <TextBlock 
                                                                        Grid.Column="5"
                                                                        Text="{Binding Status}"
                                                                HorizontalAlignment="Center"
                                                                />
                                                            <Button Grid.Column="6"
                                                                    Content="ลบ"
                                                                    Tag="{Binding Id}"
                                                                    Margin="29,3,0,0"
                                                                    Click="SellFundButton_Click"
                                                                    Style="{StaticResource MainSellFundButtonInTable}"
                                                                    Cursor="Hand">
                                                            </Button>
                                                        </Grid>

                                                        <Grid.Style>
                                                            <Style TargetType="{x:Type Grid}">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="False">
                                                                        <Setter Property="Background" Value="White"></Setter>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#DCDCF2"></Setter>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </ScrollViewer>


                            </Grid>


                        </Border>


                    </Grid>

                    <!--หมายเหตุ-->
                    <TextBlock Grid.Row="4"
                                    Style="{StaticResource MainOtherSeviceTextBlock}"
